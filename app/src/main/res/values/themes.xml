<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/black_full</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextBackgroundColor">@color/light_gray</item>
        <item name="editTextColorText">@color/black</item>
        <item name="editTextColorTextHint">@color/gray</item>
    </style>

    <style name="AppSwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

    <color name="switch_track_color">#76EAE0</color>
    <color name="switch_thumb_color">#00D6C3</color>
</resources>