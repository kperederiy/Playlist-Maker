<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:layout_marginEnd="@dimen/small_padding"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_back_24"
            app:tint="?attr/colorOnSecondary"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="?attr/colorOnSecondary"
            android:gravity="center_vertical"
            android:textSize="@dimen/title_text_size"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/medium_padding">

        <LinearLayout style="@style/SettingsMenuStyle">

            <TextView style="@style/SettingsTextStyle"
                android:text="@string/dark_theme" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:contentDescription="@string/dark_theme" />
        </LinearLayout>

        <LinearLayout style="@style/SettingsMenuStyle">

            <TextView style="@style/SettingsTextStyle"
                android:text="@string/share"/>

            <ImageView style="@style/SettingsIconStyle"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_share_24" />
        </LinearLayout>

        <LinearLayout style="@style/SettingsMenuStyle">

            <TextView style="@style/SettingsTextStyle"
                android:text="@string/support"/>

            <ImageView style="@style/SettingsIconStyle"
                android:contentDescription="@string/support"
                android:src="@drawable/ic_support_24"/>
        </LinearLayout>

        <LinearLayout style="@style/SettingsMenuStyle">

            <TextView  style="@style/SettingsTextStyle"
                android:text="@string/user_agreement"/>

            <ImageView  style="@style/SettingsIconStyle"
                android:contentDescription="@string/user_agreement"
                android:src="@drawable/ic_arrow_forward_24" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>