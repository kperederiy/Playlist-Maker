<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/medium_padding"
    android:background="?attr/colorSecondary">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="8dp"
        android:background="?attr/colorSecondary"
        app:title="@string/app_name"
        app:contentInsetStart="0dp"
        app:titleTextColor="?attr/colorSecondaryVariant"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:navigationIconTint="?attr/colorSecondaryVariant" />

    <Button style="@style/MainMenuStyle"
        android:id="@+id/search"
        android:text="@string/search"
        app:icon="@drawable/ic_search_24" />
    <Button style="@style/MainMenuStyle"
        android:id="@+id/library"
        android:text="@string/media_library"
        app:icon="@drawable/ic_library_24" />
    <Button style="@style/MainMenuStyle"
        android:id="@+id/settings"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings_24"/>
</LinearLayout>