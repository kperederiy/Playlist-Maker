<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Guideline -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <!-- Back -->
        <ImageView
            android:id="@+id/btnBack"
            android:src="@drawable/ic_arrow_back_24"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Cover -->
        <ImageView
            android:id="@+id/cover"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="@id/guidelineCenter"
            app:layout_constraintEnd_toEndOf="@id/guidelineCenter" />

        <!-- Track name -->
        <TextView
            android:id="@+id/trackName"
            tools:text="Yesterday (Remastered 2009)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Artist -->
        <TextView
            android:id="@+id/artistName"
            tools:text="The Beatles"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/trackName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Add -->
        <ImageView
            android:id="@+id/btnAdd"
            android:src="@drawable/ic_add_51"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/artistName"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Play -->
        <ImageView
            android:id="@+id/btnPlay"
            android:src="@drawable/ic_play_100"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@id/btnAdd"
            app:layout_constraintBottom_toBottomOf="@id/btnAdd"
            app:layout_constraintStart_toStartOf="@id/guidelineCenter"
            app:layout_constraintEnd_toEndOf="@id/guidelineCenter"/>

        <!-- Like -->
        <ImageView
            android:id="@+id/btnLike"
            android:src="@drawable/ic_add_favorite_51"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/btnAdd"
            app:layout_constraintBottom_toBottomOf="@id/btnAdd"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Duration -->
        <TextView
            android:id="@+id/duration"
            android:text="5:35"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/btnPlay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Album -->
        <TextView
            android:id="@+id/album"
            tools:text="Альбом: Yesterday (Remastered 2009)"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/duration"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Year -->
        <TextView
            android:id="@+id/year"
            tools:text="Год: 1965"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/album"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Genre -->
        <TextView
            android:id="@+id/genre"
            tools:text="Жанр: Rock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/year"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Country -->
        <TextView
            android:id="@+id/country"
            tools:text="Страна: Великобритания"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/genre"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/collection"
            tools:text="collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/genre"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/releaseDate"
            tools:text="releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/genre"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
